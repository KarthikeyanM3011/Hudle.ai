<%- include('layout', { body: `
    <div class="container py-4">
        <div class="row">
            <div class="col-lg-8 mx-auto">
                <div class="card">
                    <div class="card-header">
                        <h3 class="card-title mb-0">
                            <i class="fas fa-calendar-plus me-2"></i>
                            Schedule Coaching Session
                        </h3>
                    </div>
                    <div class="card-body">
                        <!-- Coach Info -->
                        <div class="row mb-4">
                            <div class="col-md-3 text-center">
                                <% if (coach.appearance && coach.appearance.avatarUrl) { %>
                                    <img src="<%= coach.appearance.avatarUrl %>" alt="<%= coach.name %>" 
                                         class="coach-avatar rounded-circle mb-2">
                                <% } else { %>
                                    <div class="coach-avatar bg-primary text-white rounded-circle d-flex align-items-center justify-content-center mb-2">
                                        <i class="fas fa-robot fa-2x"></i>
                                    </div>
                                <% } %>
                                <h5 class="fw-bold"><%= coach.name %></h5>
                                <p class="text-muted small"><%= coach.expertise?.primaryDomain || 'General Coach' %></p>
                            </div>
                            <div class="col-md-9">
                                <h6 class="fw-bold mb-2">About This Coach:</h6>
                                <p class="text-muted mb-3"><%= coach.description || 'This coach is ready to help you achieve your goals.' %></p>
                                
                                <div class="row">
                                    <div class="col-sm-4">
                                        <small class="text-muted d-block">Style:</small>
                                        <span class="badge bg-primary"><%= coach.personality?.communicationStyle || 'Supportive' %></span>
                                    </div>
                                    <div class="col-sm-4">
                                        <small class="text-muted d-block">Approach:</small>
                                        <span class="badge bg-success"><%= coach.personality?.approachMethod || 'Balanced' %></span>
                                    </div>
                                    <div class="col-sm-4">
                                        <small class="text-muted d-block">Experience:</small>
                                        <span class="badge bg-info"><%= coach.expertise?.experienceLevel || 'Expert' %></span>
                                    </div>
                                </div>
                            </div>
                        </div>
    
                        <form id="scheduleForm" action="/meetings/schedule" method="POST">
                            <input type="hidden" name="coachId" value="<%= coach.id %>">
                            
                            <!-- Session Details -->
                            <div class="mb-4">
                                <h5 class="fw-bold mb-3">Session Details</h5>
                                <div class="row">
                                    <div class="col-md-6">
                                        <div class="mb-3">
                                            <label for="title" class="form-label">Session Title</label>
                                            <input type="text" class="form-control" id="title" name="title" 
                                                   value="Coaching Session with <%= coach.name %>" required>
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="mb-3">
                                            <label for="duration" class="form-label">Duration (minutes)</label>
                                            <select class="form-select" id="duration" name="duration">
                                                <option value="30">30 minutes</option>
                                                <option value="45">45 minutes</option>
                                                <option value="60" selected>60 minutes</option>
                                                <option value="90">90 minutes</option>
                                                <option value="120">120 minutes</option>
                                            </select>
                                        </div>
                                    </div>
                                </div>
                                <div class="mb-3">
                                    <label for="description" class="form-label">Session Description (Optional)</label>
                                    <textarea class="form-control" id="description" name="description" rows="3" 
                                              placeholder="What would you like to focus on in this session?"></textarea>
                                </div>
                            </div>
    
                            <!-- Scheduling -->
                            <div class="mb-4">
                                <h5 class="fw-bold mb-3">When would you like to meet?</h5>
                                <div class="row">
                                    <div class="col-md-6">
                                        <div class="mb-3">
                                            <label for="scheduledDate" class="form-label">Date</label>
                                            <input type="date" class="form-control" id="scheduledDate" name="scheduledDate" required>
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="mb-3">
                                            <label for="scheduledTime" class="form-label">Time</label>
                                            <input type="time" class="form-control" id="scheduledTime" name="scheduledTime" required>
                                        </div>
                                    </div>
                                </div>
                                
                                <!-- Quick Time Buttons -->
                                <div class="mb-3">
                                    <label class="form-label">Quick Select:</label>
                                    <div class="btn-group btn-group-sm" role="group">
                                        <button type="button" class="btn btn-outline-secondary" onclick="setQuickTime('now')">Start Now</button>
                                        <button type="button" class="btn btn-outline-secondary" onclick="setQuickTime('15min')">In 15 min</button>
                                        <button type="button" class="btn btn-outline-secondary" onclick="setQuickTime('1hour')">In 1 hour</button>
                                        <button type="button" class="btn btn-outline-secondary" onclick="setQuickTime('tomorrow')">Tomorrow 9 AM</button>
                                    </div>
                                </div>
                            </div>
    
                            <!-- Media Settings -->
                            <div class="mb-4">
                                <h5 class="fw-bold mb-3">Session Format</h5>
                                <div class="row">
                                    <div class="col-md-6">
                                        <div class="mb-3">
                                            <label for="mediaMode" class="form-label">Session Mode</label>
                                            <select class="form-select" id="mediaMode" name="mediaSettings[mode]">
                                                <option value="avatar" selected>Avatar Mode (Recommended)</option>
                                                <option value="audio-only">Audio Only</option>
                                                <option value="video">Video Mode</option>
                                            </select>
                                            <div class="form-text">Avatar mode shows your coach's avatar with voice interaction</div>
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="mb-3">
                                            <label for="audioQuality" class="form-label">Audio Quality</label>
                                            <select class="form-select" id="audioQuality" name="mediaSettings[audioQuality]">
                                                <option value="standard">Standard</option>
                                                <option value="high" selected>High Quality</option>
                                                <option value="studio">Studio Quality</option>
                                            </select>
                                        </div>
                                    </div>
                                </div>
                                
                                <div class="row">
                                    <div class="col-md-6">
                                        <div class="form-check">
                                            <input class="form-check-input" type="checkbox" id="userVideo" name="mediaSettings[userVideo]">
                                            <label class="form-check-label" for="userVideo">
                                                Enable my camera
                                            </label>
                                            <div class="form-text">Optional: Your coach can provide visual feedback</div>
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="form-check">
                                            <input class="form-check-input" type="checkbox" id="recordAudio" name="mediaSettings[recordAudio]" checked>
                                            <label class="form-check-label" for="recordAudio">
                                                Record session audio
                                            </label>
                                            <div class="form-text">For review and progress tracking</div>
                                        </div>
                                    </div>
                                </div>
                            </div>
    
                            <!-- Session Goals -->
                            <div class="mb-4">
                                <h5 class="fw-bold mb-3">Session Goals & Focus Areas</h5>
                                <div class="row">
                                    <div class="col-md-6">
                                        <div class="mb-3">
                                            <label for="focusAreas" class="form-label">What would you like to work on?</label>
                                            <div class="focus-area-options">
                                                <% 
                                                const focusOptions = {
                                                    'interview': [
                                                        'Behavioral Questions',
                                                        'Technical Interviews',
                                                        'Salary Negotiation',
                                                        'Mock Interview Practice',
                                                        'Body Language & Confidence'
                                                    ],
                                                    'sales': [
                                                        'Cold Calling Techniques',
                                                        'Objection Handling',
                                                        'Closing Strategies',
                                                        'Presentation Skills',
                                                        'Client Relationship Building'
                                                    ],
                                                    'language': [
                                                        'Conversation Practice',
                                                        'Pronunciation',
                                                        'Grammar & Vocabulary',
                                                        'Business Language',
                                                        'Cultural Context'
                                                    ],
                                                    'career': [
                                                        'Goal Setting',
                                                        'Skill Development',
                                                        'Leadership Skills',
                                                        'Work-Life Balance',
                                                        'Career Transitions'
                                                    ]
                                                };
                                                
                                                const domain = coach.expertise?.primaryDomain || 'career';
                                                const options = focusOptions[domain] || focusOptions['career'];
                                                %>
                                                
                                                <% options.forEach(option => { %>
                                                    <div class="form-check">
                                                        <input class="form-check-input" type="checkbox" 
                                                               name="sessionCustomization[focusAreas]" 
                                                               value="<%= option %>" id="focus<%= option.replace(/\s+/g, '') %>">
                                                        <label class="form-check-label" for="focus<%= option.replace(/\s+/g, '') %>">
                                                            <%= option %>
                                                        </label>
                                                    </div>
                                                <% }); %>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="mb-3">
                                            <label for="sessionGoals" class="form-label">Specific Goals</label>
                                            <textarea class="form-control" id="sessionGoals" name="sessionCustomization[sessionGoals]" rows="5" 
                                                      placeholder="What specific outcomes do you want from this session?"></textarea>
                                        </div>
                                        
                                        <div class="mb-3">
                                            <label for="coachingIntensity" class="form-label">Coaching Intensity</label>
                                            <select class="form-select" id="coachingIntensity" name="sessionCustomization[coachingIntensity]">
                                                <option value="light">Light - Gentle guidance and support</option>
                                                <option value="moderate" selected>Moderate - Balanced approach</option>
                                                <option value="intensive">Intensive - Challenge me to push harder</option>
                                            </select>
                                        </div>
                                    </div>
                                </div>
                            </div>
    
                            <!-- Pre-session Preparation -->
                            <div class="mb-4">
                                <div class="alert alert-info">
                                    <h6 class="alert-heading">
                                        <i class="fas fa-lightbulb me-2"></i>Pre-session Tips
                                    </h6>
                                    <ul class="mb-0">
                                        <li>Find a quiet space with good internet connection</li>
                                        <li>Test your microphone and camera beforehand</li>
                                        <li>Have any relevant materials or questions ready</li>
                                        <li>Join a few minutes early to ensure everything works</li>
                                    </ul>
                                </div>
                            </div>
    
                            <!-- Form Actions -->
                            <div class="d-flex justify-content-between">
                                <a href="/coaches/<%= coach.id %>" class="btn btn-secondary">
                                    <i class="fas fa-arrow-left me-2"></i>Back to Coach
                                </a>
                                <div>
                                    <button type="button" class="btn btn-outline-primary me-2" onclick="testCoach()">
                                        <i class="fas fa-comments me-2"></i>Test Coach First
                                    </button>
                                    <button type="submit" class="btn btn-success">
                                        <i class="fas fa-calendar-check me-2"></i>Schedule Session
                                    </button>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
    
    <style>
    .coach-avatar {
        width: 80px;
        height: 80px;
        object-fit: cover;
    }
    
    .focus-area-options {
        max-height: 200px;
        overflow-y: auto;
        border: 1px solid #dee2e6;
        border-radius: 0.375rem;
        padding: 0.75rem;
    }
    
    .form-check {
        margin-bottom: 0.5rem;
    }
    </style>
    
    <script>
    // Set minimum date to today
    document.addEventListener('DOMContentLoaded', function() {
        const today = new Date();
        const dateInput = document.getElementById('scheduledDate');
        const timeInput = document.getElementById('scheduledTime');
        
        // Set minimum date to today
        dateInput.min = today.toISOString().split('T')[0];
        
        // Set default date to today
        dateInput.value = today.toISOString().split('T')[0];
        
        // Set default time to next hour
        const nextHour = new Date(today.getTime() + 60 * 60 * 1000);
        timeInput.value = nextHour.toTimeString().slice(0, 5);
    });
    
    function setQuickTime(option) {
        const dateInput = document.getElementById('scheduledDate');
        const timeInput = document.getElementById('scheduledTime');
        const now = new Date();
        
        switch (option) {
            case 'now':
                dateInput.value = now.toISOString().split('T')[0];
                timeInput.value = now.toTimeString().slice(0, 5);
                break;
            case '15min':
                const in15min = new Date(now.getTime() + 15 * 60 * 1000);
                dateInput.value = in15min.toISOString().split('T')[0];
                timeInput.value = in15min.toTimeString().slice(0, 5);
                break;
            case '1hour':
                const in1hour = new Date(now.getTime() + 60 * 60 * 1000);
                dateInput.value = in1hour.toISOString().split('T')[0];
                timeInput.value = in1hour.toTimeString().slice(0, 5);
                break;
            case 'tomorrow':
                const tomorrow = new Date(now.getTime() + 24 * 60 * 60 * 1000);
                dateInput.value = tomorrow.toISOString().split('T')[0];
                timeInput.value = '09:00';
                break;
        }
    }
    
    function testCoach() {
        window.open('/coaches/<%= coach.id %>/test', '_blank');
    }
    
    // Form validation
    document.getElementById('scheduleForm').addEventListener('submit', function(e) {
        const dateInput = document.getElementById('scheduledDate');
        const timeInput = document.getElementById('scheduledTime');
        
        if (!dateInput.value || !timeInput.value) {
            e.preventDefault();
            alert('Please select both date and time for your session.');
            return;
        }
        
        const scheduledDateTime = new Date(dateInput.value + 'T' + timeInput.value);
        const now = new Date();
        
        if (scheduledDateTime < now) {
            e.preventDefault();
            alert('Please select a future date and time.');
            return;
        }
        
        // Collect focus areas
        const focusCheckboxes = document.querySelectorAll('input[name="sessionCustomization[focusAreas]"]:checked');
        const focusAreas = Array.from(focusCheckboxes).map(cb => cb.value);
        
        if (focusAreas.length > 0) {
            const hiddenInput = document.createElement('input');
            hiddenInput.type = 'hidden';
            hiddenInput.name = 'sessionCustomization[focusAreas]';
            hiddenInput.value = JSON.stringify(focusAreas);
            this.appendChild(hiddenInput);
        }
        
        // Combine date and time
        const hiddenDateTime = document.createElement('input');
        hiddenDateTime.type = 'hidden';
        hiddenDateTime.name = 'scheduledFor';
        hiddenDateTime.value = scheduledDateTime.toISOString();
        this.appendChild(hiddenDateTime);
    });
    
    // Media mode change handler
    document.getElementById('mediaMode').addEventListener('change', function() {
        const userVideoCheckbox = document.getElementById('userVideo');
        const mode = this.value;
        
        if (mode === 'audio-only') {
            userVideoCheckbox.checked = false;
            userVideoCheckbox.disabled = true;
        } else {
            userVideoCheckbox.disabled = false;
        }
    });
    </script>
    `}) %>